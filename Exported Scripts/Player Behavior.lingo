global gPlayer -- the player behavior -- set by thisglobal gPlayerPos -- the player location targeted by enemies -- set by thisglobal gLevelRunningglobal gSndChanGameStateproperty pAliveon beginSprite me  pAlive = true  gPlayer = me  sprite(me.spriteNum).visible = TRUEendon enterFrame me  -- note this is enterFrame, whereas the ball behaviors are exitFrame -- this prevents interleaved-order-of-effects behaviors    if not pAlive or not gLevelRunning then    physics = findInstance(sprite(me.spriteNum), "Ball Behavior")    gPlayerPos = physics.pPos    return  end if    deltaPt = the mouseLoc - sprite(me.spriteNum).loc  deltaPos = vector(deltaPt.locH, deltaPt.locV, 0)    if deltaPos.magnitude < 200.0 then    deltaV = 5 * deltaPos  else    deltaV = 5 * 200.0 * deltaPos.getNormalized()  end if      -- accelerate all sprites making up the player equally  n = me.spriteNum  toAffect = [n, n + 2, n + 3, n + 4, n + 5, n + 6, n + 7]  repeat with i = 1 to toAffect.count    physics = findInstance(sprite(toAffect[i]), "Ball Behavior")    if physics <> Void then      call(#accelerate, physics, deltaV)      call(#damp, physics, 0.1)    end if  end repeat    gPlayerPos = vector(the mouseLoc.locH, the mouseLoc.locV, 0)    sprite(me.spriteNum).rotation = sprite(me.spriteNum).rotation + 2.5endon notifyGlueBroken me, glue  die meend-- called by collision and above glue breakageon die me  if not pAlive then return    pAlive = false  sprite(me.spriteNum).visible = FALSE  -- play sound  sound(gSndChanGameState).volume = 200  puppetSound gSndChanGameState, "Poik-player"    end